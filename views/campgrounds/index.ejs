<% layout('layouts/boilerplate')%>

    <h1>All Campgrounds</h1>
    <ul>
        <% campgrounds.forEach((camp)=> { %>
            <li>
                <div class="card mt-3" >
                    <div class="row">
                        <div class = "col-md-4">
                            <img src= "<%=camp.image%>" class="img-fluid" alt="...">
                        </div>
                        <div class = "col-md-8">
                            <div class="card-body">
                                <h3 class="card-title"><%= camp.title %></h3>
                                <p class="card-text"><%= camp.description %></p>
                                <p class="card-text">
                                    <medium class = "text-muted" ><%= camp.location %></medium>
                                </p>
                                <a class = "btn btn-primary" href = "/campgrounds/<%=camp._id%>">View</a>
                            </div>                            
                        </div>                        
                    </div>
                </div>
            </li>
        <% })%>
    </ul>
    <a href="/campgrounds/new">Create a new camp ground</a>
